@model IEnumerable<MvcApplication2.Models.CountryModel>

@{
    ViewBag.Title = "Countries";
}

<h2>Countries</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Country details", "Details", new { countryName = item.Name  }) 
        </td>
    </tr>
}

</table>
